{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "strict": false,
    "module": "CommonJS",
    "alwaysStrict": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "build",
    "rootDir": "./",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true
  }
}
